# Use Node.js 18 as base image
FROM node:18

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies (clean install to avoid cache issues)
RUN rm -rf node_modules package-lock.json
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3005

# Start development server without Turbopack for Docker stability
CMD ["npx", "next", "dev", "-p", "3005"] 